{
    "name": "estebanforge/hypermedia-api-wordpress",
    "description": "Add an API endpoint to WordPress to support Hypermedia libraries like HTMX, Alpine Ajax, and Datastar.",
    "type": "wordpress-plugin",
    "version": "2.0.5",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Esteban Cuevas",
            "email": "esteban@actitud.xyz"
        }
    ],
    "minimum-stability": "RC",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "starfederation/datastar-php": "^1.0"
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix",
        "ensure-vendor-dist": "mkdir -p vendor-dist",
        "prod": [
            "@cs-fix",
            "@prefix-namespaces",
            "@dump-autoload-prod"
        ],
        "dump-autoload-prod": "@php composer dump-autoload --optimize --no-dev",
        "prefix-namespaces": [
            "@ensure-vendor-dist",
            "strauss"
        ],
        "post-install-cmd": [
            "@cs-fix",
            "@prefix-namespaces",
            "@dump-autoload-prod"
        ],
        "post-update-cmd": [
            "@cs-fix",
            "@prefix-namespaces",
            "@dump-autoload-prod"
        ],
        "post-autoload-dump": [
            "@ensure-vendor-dist",
            "strauss include-autoloader"
        ]
    },
    "autoload": {
        "psr-4": {
            "HMApi\\": "src/"
        },
        "files": [
            "bootstrap.php"
        ],
        "classmap": [
            "vendor-dist"
        ]
    },
    "extra": {
        "strauss": {
            "target_directory": "vendor-dist",
            "namespace_prefix": "HMApi\\",
            "classmap_prefix": "HMApi_",
            "constant_prefix": "HMApi_",
            "packages": [
                "starfederation/datastar-php"
            ],
            "override_autoload": {
                "starfederation/datastar-php": {
                    "psr-4": {
                        "HMApi\\starfederation\\datastar\\": "src/"
                    }
                }
            },
            "delete_vendor_packages": true
        }
    }
}
