{
    "name": "estebanforge/hyperpress",
    "description": "Supercharge WordPress with the power of hypermedia. Use HTMX, Alpine Ajax, and Datastar to create rich, interactive blocks and pagesâ€”all with the simplicity of PHP.",
    "type": "wordpress-plugin",
    "version": "3.0.1",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Esteban Cuevas",
            "email": "esteban@actitud.xyz"
        }
    ],
    "minimum-stability": "RC",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "starfederation/datastar-php": "^1.0"
    },
    "require-dev": {
        "yoast/phpunit-polyfills": "^4.0",
        "phpunit/phpunit": "^9"
    },
    "scripts": {
        "cs:fix": "php-cs-fixer fix",
        "ensure-vendor-prefixed": "mkdir -p vendor-prefixed",
        "production": [
            "@cs-fix",
            "@prefix-namespaces",
            "@dump-autoload-prod"
        ],
        "dump-autoload-prod": "@php composer dump-autoload --optimize --no-dev",
        "dump-autoload-dev": "@php composer dump-autoload",
        "prefix-namespaces": [
            "@ensure-vendor-prefixed",
            "strauss"
        ],
        "post-install-cmd": [
            "@cs-fix",
            "@prefix-namespaces",
            "@dump-autoload-prod",
            "php .ci/setup-sqlite-dropin.php"
        ],
        "post-update-cmd": [
            "@cs-fix",
            "@prefix-namespaces",
            "@dump-autoload-prod",
            "php .ci/setup-sqlite-dropin.php"
        ],

        "test": "./vendor/bin/phpunit --colors=always",
        "test:all": [
            "@test"
        ],
        "test:unit": "./vendor/bin/phpunit -c phpunit.xml.dist --testsuite Unit --colors=always",
        "test:integration": "./vendor/bin/phpunit -c phpunit.xml.dist --testsuite Integration --colors=always",
        "test:coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-text --colors=always",
        "version-bump": "php .ci/version-bump.php"
    },
    "autoload": {
        "psr-4": {
            "HyperPress\\": "src/"
        },
        "files": [
            "bootstrap.php"
        ],
        "classmap": [
            "vendor-prefixed"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HyperPress\\Tests\\": "tests/"
        },
        "files": [
            "tests/helpers.php"
        ]
    },
    "extra": {
        "strauss": {
            "target_directory": "vendor-prefixed",
            "namespace_prefix": "HyperPress\\",
            "classmap_prefix": "HyperPress_",
            "constant_prefix": "HYPERPRESS_",
            "packages": [
                "starfederation/datastar-php"
            ],
            "override_autoload": {
                "starfederation/datastar-php": {
                    "psr-4": {
                        "HyperPress\\starfederation\\datastar\\": "src/"
                    }
                }
            },
            "exclude_from_copy": {
                "packages": [
                    "phpunit/phpunit",
                    "yoast/wp-test-utils",
                    "wp-phpunit/wp-phpunit"
                ],
                "namespaces": [],
                "file_patterns": []
            },
            "exclude_from_prefix": {
                "packages": [
                    "phpunit/phpunit",
                    "yoast/wp-test-utils",
                    "wp-phpunit/wp-phpunit"
                ],
                "namespaces": [],
                "file_patterns": []
            },
            "delete_vendor_packages": false
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
