{
    "name": "estebanforge/hyperpress",
    "description": "Supercharge WordPress with the power of hypermedia. Use HTMX, Alpine Ajax, and Datastar to create rich, interactive blocks and pagesâ€”all with the simplicity of PHP.",
    "type": "wordpress-plugin",
    "version": "3.0.2",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Esteban Cuevas",
            "email": "esteban@actitud.xyz"
        }
    ],
    "minimum-stability": "RC",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "starfederation/datastar-php": "^1.0",
        "estebanforge/hyperfields": "^1.0.1"
    },
    "scripts": {

        "test:setup": "php setup-sqlite-db.php",
        "cs:fix": "php-cs-fixer fix",
        "dump-autoload-prod": "@php composer dump-autoload --optimize --no-dev",
        "dump-autoload-dev": "@php composer dump-autoload",
        "production": [
            "@cs-fix",
            "@dump-autoload-prod"
        ],
        "post-install-cmd": [
            "@cs-fix",
            "@dump-autoload-prod",
            "php .ci/setup-sqlite-dropin.php"
        ],
        "post-update-cmd": [
            "@cs-fix",
            "@dump-autoload-prod",
            "php .ci/setup-sqlite-dropin.php"
        ],
        "version-bump": "php .ci/version-bump.php"
    },
    "autoload": {
        "psr-4": {
            "HyperPress\\": "src/"
        },
        "files": [
            "bootstrap.php"
        ],
        "exclude-from-classmap": [
            "**/vendor/starfederation/datastar-php/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HyperPress\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
